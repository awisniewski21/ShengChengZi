{
    "name": "char2char",
    "gpu_ids": [],
    "seed": -1,
    "finetune_norm": false,

    "path": {
        "base_dir": "experiments",
        "code": "code",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null // e.g., "experiments/inpainting_places2_220413_143231/checkpoint/25" 
    },

    "datasets": {
        "train": { 
            "which_dataset": {
                "name": "Char2CharDataset",
                "kwargs": {
                    "root_image_dir": "/Users/ajwisniewski/My Drive/Documents/Google Colab/Chinese Characters/data/debug_data_char2char"
                } 
            },
            "dataloader": {
                "validation_split": 2,
                "kwargs": {
                    "batch_size": 1,
                    "num_workers": 4,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                },
                "val_args": {
                    "batch_size": 1,
                    "num_workers": 4,
                    "shuffle": false,
                    "pin_memory": true,
                    "drop_last": false
                }
            }
        },
        "test": {
            "which_dataset": {
                "name": "Char2CharDataset",
                "kwargs": {
                    "root_image_dir": "/Users/ajwisniewski/My Drive/Documents/Google Colab/Chinese Characters/data/debug_data_char2char"
                }
            },
            "dataloader": {
                "kwargs": {
                    "batch_size": 32,
                    "num_workers": 4,
                    "pin_memory": true
                }
            }
        }
    },

    "model": {
        "which_model": {
            "name": "PaletteModel",
            "kwargs": {
                "sample_num": 8,
                "task": "colorization",
                "ema_scheduler": {
                    "ema_start": 1,
                    "ema_iter": 1,
                    "ema_decay": 0.9999
                },
                "optimizers": [
                    { "lr": 5e-5, "weight_decay": 0}
                ]
            }
        }, 
        "which_networks": [
            {
                "name": "PaletteNetwork",
                "kwargs": {
                    "unet_kwargs": {
                        "in_channel": 2,
                        "out_channel": 1,
                        "inner_channel": 64,
                        "channel_mults": [1, 2, 4, 8],
                        "attn_res": [16], // 32 and 8
                        "num_head_channels": 32,
                        "res_blocks": 2,
                        "dropout": 0.2,
                        "image_size": 32
                    },
                    "beta_schedule_kwargs": {
                        "train": {
                            "schedule": "linear",
                            "n_timestep": 1000, // 2000
                            // "n_timestep": 5, // debug
                            "linear_start": 1e-6,
                            "linear_end": 0.01
                        },
                        "test": {
                            "schedule": "linear",
                            "n_timestep": 500, // 1000
                            "linear_start": 1e-4,
                            "linear_end": 0.09
                        }
                    },
                    "module_name": "guided_diffusion",
                    "init_type": "kaiming"
                }
            }
        ],
        "which_losses": [
            "mse_loss"
        ],
        "which_metrics": [
            "mae"
        ]
    },

    "train": {
        "n_epoch": 1e8,
        "n_iter": 1e8,
        "val_epoch": 1,
        "save_checkpoint_epoch": 10,
        "log_iter": 10,
        "tensorboard": true
    },
    
    "debug": {
        "val_epoch": 1,
        // "save_checkpoint_epoch": 1,
        "log_iter": 10,
        "debug_split": 50
    }
}
